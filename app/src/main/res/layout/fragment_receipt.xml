<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.ReceiptFragment"
    android:orientation="vertical"
    android:background="@drawable/background6"
    android:gravity="center_horizontal"
    android:padding="10dp">

    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/animalHouseTitle"
        app:cardCornerRadius="20sp"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="發票紀錄"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:paddingHorizontal="20sp"
            android:paddingVertical="10dp"
            android:fontFamily="@font/pop"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:orientation="horizontal"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="30dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mabtn_receipt_scan"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:cornerRadius="30dp"
        android:text="掃描發票"
        android:textStyle="bold"
        android:textSize="20sp"
        app:backgroundTint="@color/button_orange"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="掃描結果:"
        android:textSize="20sp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txt_receipt_scanResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="null"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mabtn_receipt_save"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:cornerRadius="30dp"
        android:text="儲存"
        android:textStyle="bold"
        android:textSize="20sp"
        app:backgroundTint="@color/button_orange"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:orientation="horizontal"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="發票紀錄:"
        android:textSize="20sp"
        android:paddingHorizontal="10dp"/>

    <GridView
        android:id="@+id/gv_receipt_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="1"
        android:gravity="center"
        android:layout_marginTop="10dp" />


</LinearLayout>