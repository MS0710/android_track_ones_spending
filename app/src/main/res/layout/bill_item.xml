<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    android:gravity="center">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_billItem_item"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/animalDiseaseGreenBlue"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_billItem_day"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="12"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:gravity="center"
                android:fontFamily="@font/content" />

            <TextView
                android:id="@+id/txt_billItem_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="2024/11/11"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:gravity="center"
                android:fontFamily="@font/content" />
            <TextView
                android:id="@+id/txt_billItem_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="交通"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:gravity="center"
                android:fontFamily="@font/content" />

            <TextView
                android:id="@+id/txt_billItem_detail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="悠遊卡儲值"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:gravity="center"
                android:fontFamily="@font/content" />
            <TextView
                android:id="@+id/txt_billItem_cost"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-1000"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:gravity="center"
                android:fontFamily="@font/content" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>